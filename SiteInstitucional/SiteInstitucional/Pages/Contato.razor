@page "/contato"

<PageTitle>SetState • Contato</PageTitle>

<div class="contact-styles">
	<!-- Banner -->
	<section class="banner--page">
		<div class="container">
			<div class="tittle--banner-page">
				<span>
					Precisa de ajuda sobre um serviço ou quer iniciar um
					projeto novo
				</span>
				<h1>Entre em contato agora!</h1>
			</div>
		</div>
		<div class="video--frame">
			<video autoplay muted loop>
				<source src="./assets/video/pexels-google.mp4"
						type="video/mp4" />
			</video>
		</div>
	</section>

	<!-- Cards -->
	<section class="">
		<div class="container">
			<div class="contact--cards">
				<div class="contact--card">
					<img src="./assets/email.svg" alt="" />
					<h4>E-mail</h4>

					<div class="contact--info">
						<span>Atendimento</span>
						<p>contato@setstate.com.br</p>
					</div>

					<div class="contact--info">
						<span>Suporte</span>
						<p>contato@setstate.com.br</p>
					</div>
				</div>
				<div class="contact--card">
					<img src="./assets/phone.svg" alt="" />
					<h4>Telefone</h4>

					<div class="contact--info">
						<span>Atendimento</span>
						<p>(11) 99999-9999</p>
					</div>

					<div class="contact--info">
						<span>Suporte</span>
						<p>(11) 99999-9999</p>
					</div>
				</div>
				<div class="contact--card">
					<img src="./assets/loc.svg" alt="" />
					<h4>Local</h4>

					<div class="contact--info">
						<span>Escritório</span>
						<p>Av. Paulista, 000 - Bairro Cidade - SP</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Mapa -->
	<div class="map--container">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.017065571664!2d-46.6506680239141!3d-23.567830561831325!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce59becf89e4df%3A0x49adf2faace821b2!2sAv.%20Paulista%2C%20500%20-%20Bela%20Vista%2C%20S%C3%A3o%20Paulo%20-%20SP%2C%2001323-030!5e0!3m2!1spt-BR!2sbr!4v1715625226741!5m2!1spt-BR!2sbr"
				style="border: 0"
				allowfullscreen=""
				loading="lazy"
				referrerpolicy="no-referrer-when-downgrade"></iframe>
	</div>
</div>

