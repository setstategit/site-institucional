@page "/contato"

<PageTitle>SetState • Contato</PageTitle>

<div class="contact-styles">
	<!-- Banner -->
	<section class="banner--page">
		<div class="container">
			<div class="tittle--banner-page">
				<span>
					Precisa de ajuda sobre um serviço ou quer iniciar um
					projeto novo
				</span>
				<h1>Entre em contato agora!</h1>
			</div>
		</div>
		<div class="video--frame">
			<video autoplay muted loop>
				<source src="./assets/video/pexels-google.mp4"
						type="video/mp4" />
			</video>
		</div>
	</section>

	<!-- Cards -->
	<section class="">
		<div class="container">
			<div class="contact--cards">
				<div class="contact--card">
					<img src="./assets/email.svg" alt="" />
					<h4>E-mail</h4>

					<div class="contact--info">
						<span>Atendimento</span>
						<p>contato@setstate.com.br</p>
					</div>
				</div>
				<div class="contact--card">
					<img src="./assets/phone.svg" alt="" />
					<h4>Telefone</h4>

					<div class="contact--info">
						<span>Atendimento</span>
						<p>(19) 97106-6142</p>
					</div>

					<div class="contact--info">
						<a href="https://wa.me/5519971066142" target="_blank"><img src="./assets/img/logo-whatsapp-fundo-transparente-icone.png" style="width:70%"/></a>
					</div>
				</div>
				<div class="contact--card">
					<img src="./assets/loc.svg" alt="" />
					<h4>Local</h4>

					<div class="contact--info">
						<span>Escritório</span>
						<p>
							R. Tuiuti, 1532 - Cidade Nova I, Indaiatuba - SP
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Mapa -->
	<div class="map--container">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3670.522181899875!2d-47.20386964152527!3d-23.077972952960707!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94c8b4a4b0057e8f%3A0x52ca051966e87510!2sR.%20Tuiuti%2C%201532%20-%20Cidade%20Nova%20I%2C%20Indaiatuba%20-%20SP%2C%2013334-000!5e0!3m2!1spt-BR!2sbr!4v1723068993699!5m2!1spt-BR!2sbr"
				style="border: 0"
				allowfullscreen=""
				loading="lazy"
				referrerpolicy="no-referrer-when-downgrade"></iframe>
	</div>
</div>

